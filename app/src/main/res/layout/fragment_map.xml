<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.ddb.runningapp.MapFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="16dp"
            android:paddingTop="8dp"
            android:text="@string/loc_title"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="20dp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4"
        android:orientation="vertical">
        <com.google.android.gms.maps.MapView
            android:id="@+id/map"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </LinearLayout>

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="155dp">

        <ToggleButton
            android:id="@+id/btnStartStop"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="ToggleButton"
            android:textOff="Start"
            android:textOn="Stop"
            android:layout_marginEnd="30dp"
            android:layout_marginStart="20dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="16dp"
            android:layout_marginRight="30dp"
            app:layout_constraintRight_toRightOf="@+id/textView2"
            android:layout_marginLeft="20dp"
            app:layout_constraintLeft_toLeftOf="@+id/textView"
            tools:layout_constraintRight_creator="1"
            tools:layout_constraintLeft_creator="1" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="137dp"
            android:layout_height="47dp"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="29dp"
            android:layout_marginStart="29dp"
            android:layout_marginTop="26dp"
            android:includeFontPadding="true"
            android:text="@string/title_Distance"
            android:textAppearance="@style/TextAppearance.AppCompat"
            android:textSize="24sp"
            app:layout_constraintBottom_toBottomOf="@+id/dur_view"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.45" /><![CDATA[
        " />

        ]]>

        <TextView
            android:id="@+id/textView2"
            android:layout_width="137dp"
            android:layout_height="47dp"

            android:layout_marginBottom="8dp"
            android:layout_marginLeft="29dp"
            android:layout_marginStart="29dp"
            android:layout_marginTop="26dp"
            android:includeFontPadding="true"
            android:text="@string/title_Duration"
            android:textAppearance="@style/TextAppearance.AppCompat"
            android:textSize="24sp"
            android:layout_marginEnd="52dp"
            app:layout_constraintTop_toTopOf="parent"

            tools:layout_constraintRight_creator="1"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginRight="52dp"
            app:layout_constraintBottom_toBottomOf="parent"

            app:layout_constraintVertical_bias="0.386" />

        <TextView
            android:id="@+id/dist_view"
            android:layout_width="0dp"
            android:layout_height="46dp"


            android:layout_marginEnd="51dp"
            android:layout_marginLeft="45dp"
            android:layout_marginRight="51dp"
            android:layout_marginStart="45dp"
            android:text="0.0"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="@+id/textView"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.842"
            tools:layout_constraintLeft_creator="1"
            tools:layout_constraintRight_creator="1" />

        <TextView
            android:id="@+id/dur_view"
            android:layout_width="62dp"
            android:layout_height="49dp"
            android:layout_marginEnd="51dp"
            android:layout_marginLeft="45dp"
            android:layout_marginRight="51dp"
            android:layout_marginStart="45dp"
            android:text="0:00:00"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintLeft_toLeftOf="@+id/textView2"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.855" />

    </android.support.constraint.ConstraintLayout>

</LinearLayout>